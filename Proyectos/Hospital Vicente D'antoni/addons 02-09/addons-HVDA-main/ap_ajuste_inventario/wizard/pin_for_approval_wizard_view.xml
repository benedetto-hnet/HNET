<odoo>
    <data>
        <record id="pin_for_approval_ai_form" model="ir.ui.view">
            <field name="name">pin.for.approval.ai.form</field>
            <field name="model">stock.inventory.approval</field>
                <field name="arch" type="xml">
                    <form string="Favor Ingresar Pin para Aprobar Ajuste de Inventario">
                        <group>
                            <field name="pin" password="True"/>
                        </group>
                        <footer>
                            <button name="action_po_approve" type="object" string="Aprobar" class="btn-primary"/>
                            or
                            <button string="_Cancel" class="btn-default" special="cancel" />
                        </footer>
                    </form>
                </field>
        </record>

        <record id="action_pin_for_approval_ai_form" model="ir.actions.act_window">
        <field name="name">Aprobar Ajuste Inventario</field>
        <field name="res_model">stock.inventory.approval</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pin_for_approval_ai_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_inventory"/>
        <field name="binding_view_types">form</field>
    </record>
   </data>
</odoo>
